<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C2AA"
    tools:context=".UpdateActivity">
    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Character name"
        android:textColor="@color/dark_brown"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="50dp"/>
    <EditText
        android:id="@+id/desc_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_edit"
        android:hint="Character description"
        android:textColor="@color/dark_brown"
        android:layout_margin="50dp"/>
    <Button
        android:id="@+id/updateEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE CONTENT"
        android:textColor="@color/white"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@id/desc_edit"/>
    <Button
        android:id="@+id/deleteEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE CONTENT"
        android:textColor="@color/white"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@id/updateEntry"/>

</androidx.constraintlayout.widget.ConstraintLayout>